# Don't need the executables
--disable-ffmpeg
--disable-ffserver
--disable-ffplay

# Keep size down
--disable-debug
--disable-encoders
--disable-muxers
--disable-protocols
--enable-protocol=file

# These are usually disabled, but make sure
--disable-audio-oss
--disable-audio-beos
--disable-v4l
--disable-v4l2
--disable-bktr
--disable-dv1394
--disable-network
--disable-ipv6
--disable-zlib
--disable-vhook
